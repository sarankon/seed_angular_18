{
    "tabWidth": 4,
    "semi": true,
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "semi": false,
                "printWidth": 180
            }
        },
        {
            "files": "*.ts",
            "options": {
                "semi": false,
                "printWidth": 180
            }
        },{
            "files": "*.module.ts",
            "options": {
                "semi": false,
                "printWidth": 80
            }
        }
    ],
    "plugins": ["prettier-plugin-tailwindcss"]
}
